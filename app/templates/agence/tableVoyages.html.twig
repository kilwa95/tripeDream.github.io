{% extends 'agence/index.html.twig' %}

{% block title %}Mes voyages{% endblock %}

{% block core %}
<div class="container">
    <div class="card">
        <div class="card-header">Mes voyages</div>
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
        {% endfor %}
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="text-center" scope="col">Name</th>
                        <th class="text-center" scope="col">Description</th>
                        <th class="text-center" scope="col">Aperçu</th>
                        <th class="text-center" scope="col">Opérations</th>
                    </tr>
                </thead>
                <tbody>
                    {% for voyage in voyages %}



                    <tr>
                        <th class="text-center" style="max-width:181px;" scope="row">{{voyage.name}}</th>
                        <td class="text-center" style="max-width:181px;">{{voyage.description}}</td>
                        <td class="text-center"> <img style="max-width:181px;" class="mr-3" src="{{ vich_uploader_asset(voyage) }}" alt="{{ voyage.name }}" /></td>


                        <td class="text-center">
                            <a href="{{path('voyage_show', {'id': voyage.id})}}" class="btn btn-info btn-xs update">
                                <i class="bi bi-eye"></i>
                            </a>&nbsp;
                            <a href="{{path('trip_edit', {'id': voyage.id})}}" class="btn btn-warning btn-xs update">
                                <i class="bi bi-pencil-square"></i>
                            </a>&nbsp;
                            <a href="{{path('trip_delete', {'id': voyage.id})}}" class="btn btn-danger btn-xs delete">
                                <i class="bi bi-x-square"></i></a>
                        </td>

                    </tr>
                    {% endfor %}


                </tbody>
            </table>
        </div>
        <div>
        </div>
    </div>
    {% endblock %}