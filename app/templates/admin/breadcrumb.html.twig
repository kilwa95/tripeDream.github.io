<div class="c-subheader px-3">
    <ol class="breadcrumb border-0 m-0">
        {% set full_path = app.request.getpathinfo %}
        {% set urls = full_path|trim('/') %}
        {% set urls = urls|split('/') %}
        {% set base_url = app.request.getBaseURL() %}

        {% set current = '' %}
        {% for url in urls %}
            {% if loop.last %}
                <li class="breadcrumb-item active">{{ url|e }}</li>
            {% else %}
                {% set current = current ~ url ~ '/' %}
                <li class="breadcrumb-item"><a href="{{ base_url ~ '/' ~ current }}">{{ url|e }}</a></li>
            {% endif %}
        {% endfor %}
    </ol>
</div>