{% extends 'admin/index.html.twig' %}

{% block title %}Détails activité{% endblock %}

{% block contentpage %}

<div class="container-fluid">
    <div class="fade-in">
        <div class="row">
            <div class="col">
                <div class="card card-accent-success">
                    <div class="card-header"><strong>Détails activité</strong>
                        <div class="card-header-actions">
                            <a type="button" class="btn btn-outline-primary" href="{{ path('admin_activite_edit', {'id': activite.id})}}">
                                <i class="bi bi-pencil-square"></i>
                                Modifier
                            </a>
                            <a type="button" class="btn btn-outline-danger" href="{{ path('delete_activite', {'id': activite.id})}}">
                                <i class="bi bi-trash"></i>
                                Supprimer
                            </a>
                        </div>
                    </div>
                    <div class="collapse show" id="coll">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">ID:</h6>
                                </div>
                                <div class="col-sm-9">
                                    <em>{{ activite.id }}</em>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nom:</h6>
                                </div>
                                <div class="col-sm-9">
                                    <em>{{ activite.name }}</em>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% set entity = 'activite' %}
{% include 'admin/back_to_list_card.html.twig' %}

{% endblock %}
