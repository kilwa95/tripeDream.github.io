{{ form_start(form) }}
<div class="card-body">
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
    {{ form_row(form.jour) }}
    {{ form_row(form.description) }}
</div>

<div class="card-footer">
    {{ form_row(form.submit) }}
    
    {% if form.reset is defined %}
        {{ form_row(form.reset) }}
    {% endif %}
</div>
{{form_end(form) }}