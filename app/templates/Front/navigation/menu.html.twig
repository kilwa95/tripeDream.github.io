<script>
  function filterSearch(input){
    let text = $(input).val().toLowerCase();
    $(document).find(".dropdown-menu > a").filter(function () {
      if($(this).attr('data-search') !== undefined){
        $(this).toggle($(this).attr('data-search').toLowerCase().indexOf(text) > -1);
      }
    });
  }
</script>
