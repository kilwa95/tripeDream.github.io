{% extends 'base_front.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
{% set totale = 0 %}
{% set tarifs = [] %}

{% for panier in paniers %}
{% set tarifs = tarifs|merge([panier.tarif|first.prix]) %}
{% endfor %}

{% for i in tarifs %}
{% set totale = totale + i %}
{% endfor %}

<div class="container">
    <div class="section">
        {% if paniers is not empty %}
            <div class="box">
                <h1 class="has-text-centered">
                    Mon panier
                </h1>
            </div>
            <div class="columns is-multiline">
            {% for panier in paniers %}
                <div class="column is-one-third">
                    <div class="card is-shady">
                        <div class="card-image">
                            <a class="image is-16by9" href="{{ path('voyage_show', {'id': panier.id}) }}">
                                <img src="{{ vich_uploader_asset(panier) }}" alt="{{ panier.name }}" />
                            </a>
                        </div>
                        <div class="v-card-content">
                            <p class="title is-6" align="center">{{ panier.name }}</p>
                            <p>{{ panier.description }}</p>
                        </div>
                        <div class="v-card-content">
                        <form method="post">
                            <select class='date-price-select' name='chosen_price'> 
                                <option value="">-Choisissez votre option de voyage--</option>
                            {% for tarif in panier.tarif %}
                            <optgroup label = "{{tarif.depart|date("d/m/Y")}} - {{tarif.retour|date("d/m/Y")}}"></optgroup>
                                <option value="{{ tarif }}">
                                    {{ tarif }}
                                </options>
                            {% endfor %}
                            </select>
                            </form>
                        </div>
                        <footer class="card-footer">
                            <span class="card-footer-item"><a href="{{ path('panier_delete', {'id': panier.id}) }}"><button class="button is-small is-danger">Supprimer</button></a></span>
                            <input class="tiny footer-voyage-price" style='width: 50px;height: 24px' value='' disabled> €</input>  
                            <span class="card-footer-item"><a href="{{ path('voyage_show', {'id': panier.id}) }}"><button class="button is-small is-success">Afficher le voyage</button></a></span>
                        </footer>
                    </div>
                </div>
            {% endfor %}
            </div>

            <div class="pagination justify-content-center">
                {{ knp_pagination_render(paniers) }}
            </div>

            <div class="card">
                <div class="v-card-content">
                    <p><b>Total:</b> <label value='{{ totale }} '>{{ totale }}</label>€</p>
                </div>
                <footer class="card-footer">
                {{ app.session.set('totale', totale) }}
                    <span class="card-footer-item"><span><a href="{{ path('panier_validation')}}"><button class="button is-info">Passer la commande</button></a></span></span>
                </footer>
            </div>
        {% else %}
            <div class="box">
                <p class="has-text-centered has-text-danger-dark">
                    Le panier est vide
                </p>
            </div>
        {% endif %}
    </div>
</div>





<script>
let selector = document.querySelector('.date-price-select')

selector.addEventListener('change', function(e){
    document.querySelector('form').submit()
  
})

</script>
{% endblock %}
