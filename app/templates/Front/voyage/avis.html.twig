{% set avisSort = [] %}
{% for avi in avis %}
{% set avisSort  = avisSort|merge([avi]) %}
 {% endfor %}

{% for avi in avisSort|sort((a, b) => a.date < b.date) %}
    <ul class="list-unstyled  ">
        <li class="media w-75  ">
            <div class="media-body ">
                <div><a style="font-size:24px;font-weight:700; color:green; max-width:64.45px;" class="mr-4 ">
                        user: {{avi.user.lastName}}</a>
                </div>
                <div class="d-flex justify-content-between">

                    <div><a href="" style="font-size:24px;font-weight:700; color:#61464b;" class="mt-0 mb-1">
                            titre: {{avi.titre}}</a>
                    </div>
                    <div>
                        {% for i in 1..avi.compteur  %}
                        <i class=" star fa fa-star"></i>
                        {% endfor %}
                    </div>

                </div>

                <p style="font-size:16px; color: #61464b;" class="font-weight-light text-justify  ">
                    {{avi.description}}
                </p>
                <p style="font-size:16px; color: #61464b;" class="font-weight-light text-justify  ">
                    {{avi.date|date("m/d/Y")}}
                </p>
        </li>
        <hr>
    </ul>
    {% endfor %}
</div>